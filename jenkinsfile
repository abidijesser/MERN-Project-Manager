pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                script {
                    sh('npm install')
                }

                dir('Server') {
                    sh ('npm install')
                }

                dir('Client') {
                    sh ('npm install')
                }
            }
        }

        stage('Unit Test') {
            steps {
                script {
                    echo "No tests yet.."
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {

                    def scannerHome = tool 'scanner'
                    withSonarQubeEnv {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }       
            }
        }

        stage('Build application') {
            steps {
                script {
                    
                    dir('Client') {
                        sh ('npm run build')
                    }
            
                    echo "Build application completed"
                }       
            }
        }

        stage('Building images (node and mongo)') {
            steps{
                script {
                    sh('docker-compose build')
                }
            }
        }

        
    }
}
