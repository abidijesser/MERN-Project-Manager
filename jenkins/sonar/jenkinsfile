pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                script {
                    sh 'npm install'
                    dir('Server') {
                        sh 'npm install'
                    }
                    dir('Client') {
                        sh 'npm install'
                    }
                }
            }
        }

        stage('Unit Test') {
            steps {
                echo "No tests yet.."
            }
        }

        stage('Build frontend') {
            steps {
                script {
                    dir('Client') {
                        sh 'npm run build'
                    }
                }
            }
        }

        stage('Archive frontend build') {
            steps {
                dir('Client') {
                    archiveArtifacts artifacts: 'dist/**', fingerprint: true
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'scanner'
                    withSonarQubeEnv {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }       
            }
        }

        stage('Trigger Nexus Pipeline') {
            steps {
                script {
                    def branch = env.BRANCH_NAME
                    def buildNumber = env.BUILD_NUMBER
                    build job: "pipeline-2-nexus/${branch}", wait: false, parameters: [
                        string(name: 'BUILD_NUMBER', value: buildNumber)
                    ]
                }
            }
        }
    }
}
