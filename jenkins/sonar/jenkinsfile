pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                script {
                    sh('npm install')
                    dir('Server') {
                        sh ('npm install')
                    }
                    dir('Client') {
                        sh ('npm install')
                    }
                }
            }
        }

        stage('Unit Test') {
            steps {
                echo "No tests yet.."
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'scanner'
                    withSonarQubeEnv {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }       
            }
        }

        stage('Trigger Nexus Pipeline') {
            steps {
                script {
                    def branch = env.BRANCH_NAME
                    build job: "pipeline-2-nexus/${branch}", wait: false
                }
            }
        }


    }
}
